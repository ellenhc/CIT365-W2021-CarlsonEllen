@page
@model MyScriptureJournal.Pages.Scriptures.IndexModel

@{
    ViewData["Title"] = "My Scriptures";
}

<h1>Index</h1>

<p>
    <a class="btn btn-primary" asp-page="Create">Add New</a>
</p>
<form>
    <p class="search-container">
        Search by book:
        <select asp-for="ScriptureBook" asp-items="Model.Books">
            <option value="">All</option>
        </select><br />
        Search notes by keyword: <input type="text" asp-for="SearchString" />
        <div class="btn-container">
            <input type="submit" value="Filter" />
            <a class="btn btn-secondary" asp-page="./Index">Back to full List</a>
        </div>
    </p>
</form>
<table class="table table-hover">
    <thead>
        <tr>
            <th>
                <a asp-page="./Index" asp-route-sortOrder="@Model.BookSort">
                    @Html.DisplayNameFor(model => model.Scripture[0].Reference)
                </a>
            </th>
            <th>
                <a asp-page="./Index" asp-route-sortOrder="@Model.DateSort">
                    @Html.DisplayNameFor(model => model.Scripture[0].DateAdded)
                </a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Scripture[0].Note)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Scripture) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Reference)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateAdded)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Note)
            </td>
            <td>
                <a class="btn btn-success" asp-page="./Details" asp-route-id="@item.ID">Details</a>
                <a class="btn btn-primary" asp-page="./Edit" asp-route-id="@item.ID">Edit</a>
                <a class="btn btn-warning" asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
